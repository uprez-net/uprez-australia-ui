enum EligibilityStatus {
  Failed
  Pending
  SME_Eligible
  Mainboard_Eligible
  Not_Eligible
}

enum GenerationStatus {
  Idle
  Processing
  Completed
  Failed
}

enum IntermediaryType {
  MerchantBanker
  CompanySecretary
  Auditor
  Other
}

enum TeamMemberRole {
  Admin
  Editor
  Viewer
}

enum UserRole {
  SME
  Intermediary
  TeamMember
}

enum ComplianceStatus {
  pending
  low
  medium
  high
  failed
}
